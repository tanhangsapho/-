    "@bmatei/apollo-prometheus-exporter": "^3.0.0",
    "@typegoose/typegoose": "^12.10.1",
    "@types/express-serve-static-core": "4.17.35",
    "apollo-server-core": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
