{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/index.ts",
    "lint": "prettier --list-different 'src/**/*.ts' && eslint 'src/**/*.ts'",
    "lint:fix": "prettier --write 'src/**/*.ts' && eslint --fix 'src/**/*.ts'",
    "build": "tsc",

    "docker:up": "docker-compose -f ./configs/docker-compose.yaml up -d",
    "docker:down": "docker-compose -f ./configs/docker-compose.yaml down",
    "docker:build": "docker-compose -f ./configs/docker-compose.yaml build",
    "docker:rebuild": "docker-compose -f ./configs/docker-compose.yaml down && docker-compose -f ./config/docker-compose.yml build && docker-compose -f ./config/docker-compose.yml up -d",
    "docker:logs": "docker-compose -f ./configs/docker-compose.yaml logs -f",
    "docker:ps": "docker-compose -f ./configs/docker-compose.yaml ps"
  },
  "author": "",
